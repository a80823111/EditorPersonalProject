@model PersonalViewModels
@using (Html.BeginForm("InsertUpdate", "Home", FormMethod.Post, new { enctype = "multipart/form-data", name = "forms" }))
{
<div class="form-group">
    @Html.HiddenFor(model => model.id ,Model.id )
    <div>
        姓名 : @Html.TextBoxFor(model => model.Name, Model.Name)
        @Html.ValidationMessageFor(model => model.Name)
    </div>
    <div>
        地址 : @Html.TextBoxFor(model => model.Address, Model.Address)
        @Html.ValidationMessageFor(model => model.Address)
    </div>
    <div>
        電話 : @Html.TextBoxFor(model => model.PhoneNumber, Model.PhoneNumber)
        @Html.ValidationMessageFor(model => model.PhoneNumber)
    </div>
    <div>
        郵件 : @Html.TextBoxFor(model => model.Email, Model.Email)
        @Html.ValidationMessageFor(model => model.Email)
    </div>
    <input class="btn btn-primary" type="submit" value="儲存"/>
</div>
}